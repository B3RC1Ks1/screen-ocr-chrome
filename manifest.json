{
  "name": "Screen OCR + ChatGPT Extension",
  "version": "1.1.0",
  "manifest_version": 3,
  "description": "Select an area of the screen, perform OCR, and query ChatGPT.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["contentScript.js", "lib/tesseract.min.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/tesseract.min.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "commands": {
    "start-ocr-selection": {
      "suggested_key": {
        "default": "Alt+X",
        "mac": "Alt+X"
      },
      "description": "Start OCR Selection"
    }
  }
}
