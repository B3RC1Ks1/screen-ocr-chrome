{
  "name": "AskAI",
  "version": "0.2.5",
  "manifest_version": 3,
  "description": "Select an area of the screen and get an answer from ChatGPT!",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:9005/*",
    "https://screen-ocr-chrome.onrender.com/*"
  ],
  "background": {
    "service_worker": "backend/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": [
        "lib/tesseract.min.js",
        "scripts/logger.js",
        "scripts/state.js",
        "scripts/tesseractLoader.js",
        "scripts/ocr.js",
        "scripts/ui.js",
        "scripts/selectionOverlay.js",
        "scripts/communication.js",
        "scripts/contentScript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/tesseract.min.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "commands": {
    "start-ocr-selection": {
      "suggested_key": {
        "default": "Alt+Z",
        "mac": "Alt+Z"
      },
      "description": "Start OCR Selection"
    }
  },
  "icons": {
    "128": "logo.png"
  }
}
